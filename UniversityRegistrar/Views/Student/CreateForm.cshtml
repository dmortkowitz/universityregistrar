@{
  Layout = "_Layout";
}

<h1 class="my-3">Add student.</h1>
<form action="/students" method="post">
  <div class="form-group">
    <label for="studentName">Student name.</label>
    <input type="text" class="form-control" id="studentName" name="studentName">
  </div>
  <div class="form-group">
    <label for="studentEnrollmentDate">Student Enrollment Date.</label>
    <input type="datetime-local" class="form-control" id="studentEnrollmentDate" name="studentEnrollmentDate">
  </div>
  <button type="submit" class="btn btn-warning mr-2">Register</button>
  <a href="/students" class="btn btn-secondary">Back to students.</a>
</form>
